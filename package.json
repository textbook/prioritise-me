{
  "name": "@prioritise/me",
  "version": "0.0.1",
  "description": "Task prioritisation tool",
  "scripts": {
    "e2e": "concurrently -k -s first -n \"app,e2e\" \"npm run start:client\" \"npm run test:e2e\"",
    "install:client": "cd ./client && npm install",
    "install:e2e": "cd ./e2e && npm install",
    "lint": "eslint .",
    "postinstall": "npm run install:client && npm run install:e2e",
    "ship": "npm run lint && npm test",
    "start:client": "cd ./client && cross-env BROWSER=none npm start",
    "test:client": "cd ./client && npm test -- --reporters=\"jest-junit\" --no-watch",
    "test:e2e": "wait-on http-get://localhost:3000 && cd ./e2e && npm test",
    "pretest": "rimraf ./output/*",
    "test": "npm run test:client && npm run e2e"
  },
  "author": "Jonathan Sharpe <mail@jonrshar.pe>",
  "license": "ISC",
  "devDependencies": {
    "babel-eslint": "^9.0.0",
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.16.0",
    "eslint-config-react-app": "^3.0.8",
    "eslint-plugin-cypress": "^2.2.1",
    "eslint-plugin-flowtype": "^3.4.2",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^1.3.1",
    "rimraf": "^2.6.3",
    "wait-on": "^3.2.0"
  },
  "eslintConfig": {
    "env": {
      "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "rules": {
      "arrow-parens": [
        "error",
        "always"
      ],
      "brace-style": [
        "error",
        "1tbs",
        {
          "allowSingleLine": false
        }
      ],
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "curly": "error",
      "eol-last": [
        "error",
        "always"
      ],
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "no-unused-vars": [
        "error",
        {
          "ignoreRestSiblings": true
        }
      ],
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "operator-linebreak": [
        "error",
        "before"
      ],
      "prefer-arrow-callback": [
        "error",
        {
          "allowNamedFunctions": true
        }
      ],
      "quotes": [
        "error",
        "double"
      ],
      "semi": [
        "error",
        "always"
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run ship"
    }
  }
}
